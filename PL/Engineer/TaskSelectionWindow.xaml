<Window x:Class="PL.Engineer.TaskSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Icon="/Logo.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Task Selection" Height="350" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <!--Engineer Task-->
        <Label Content="Choose a task from the list:" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontFamily="Comic Sans MS" Margin="0,10,0,0"/>


        <ListView ItemsSource="{Binding ListTasks}" 
                  SelectedItem="{Binding SelectedTask,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10,50,10,73"/>
        
        <Button Content="Done" HorizontalAlignment="Center" Height="50" Margin="0,250,0,0" VerticalAlignment="Top" Width="112"
                FontFamily="Comic Sans MS" FontSize="30" Background="#FF3498DB" Click="Btn_Done_Click"/>
    </Grid>
</Window>

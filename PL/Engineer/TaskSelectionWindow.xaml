<Window x:Class="PL.Engineer.TaskSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Icon="/Logo.png"
        Title="Task Selection" Height="300" Width="400"
        DataContext="{Binding TaskList,RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <!--Engineer Task-->
        <Label Content="Choose a task from the list:" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontFamily="Segoe Print" FontWeight="Bold" Margin="0,75,0,0"/>
        <ComboBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="324" FontSize="15"
          ItemsSource="{Binding TaskList}" SelectedValue="{Binding engTask, Mode=TwoWay,NotifyOnValidationError=True,ValidatesOnExceptions=True}"/>
        <Button Content="Done" HorizontalAlignment="Left" Height="50" Margin="149,216,0,0" VerticalAlignment="Top" Width="100"
                FontFamily="MV Boli" FontWeight="Bold" FontSize="30" Foreground="Black" Background="#FF3498DB"/>
    </Grid>
</Window>

<Window x:Class="PL.Engineer.EngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EngineerWindow" Height="450" Width="800"
        DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="ID: " />
        <TextBlock Grid.Row="1" Text="Name: " />
        <TextBlock Grid.Row="2" Text="Email: " />
        <TextBlock Grid.Row="3" Text="Level: " />
        <TextBlock Grid.Row="4" Text="Cost: " />
        <TextBlock Grid.Row="5" Text="Task: " />
        <Grid Margin="58,0,637,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id, Mode=TwoWay}"/>
        <TextBox Grid.Row="1" Grid.Column="1"  Text="{Binding Name, Mode=TwoWay}" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email, Mode=TwoWay}"/>
        <ComboBox Grid.Row="3" Grid.Column="1" SelectedValue="{Binding Path=Level, Mode=TwoWay}"
          ItemsSource="{Binding Source={StaticResource LevelEngineerCollectionKey}}"
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="EngLevel_SelectionChanged"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Cost, Mode=TwoWay}"/>
        <ComboBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto"/>
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
        Content="{Binding Id, Converter={StaticResource ConvertIdToContentKey}}"
        HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Top" Padding="5" 
        Click="btnAddUpdate_Click"/>

    </Grid>

</Window>

<Window x:Class="PL.Task.DependencySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        Icon="/Logo.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Dependencies Selection" Height="350" Width="450"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <!--Dependencies Task-->
        <Label Content="Select all the tasks that the task depends on" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontFamily="Comic Sans MS" Margin="0,10,0,0"/>

        <!--Task List-->
        <ListView ItemsSource="{Binding ListTasks}" SelectionMode="Multiple"
              SelectedItem="{Binding SelectedTasks,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10,50,10,73"/>

        <Button Content="Done" HorizontalAlignment="Center" Height="50" Margin="0,250,0,0" VerticalAlignment="Top" Width="112"
            FontFamily="Comic Sans MS" FontSize="30" Background="#FF3498DB" Click="Btn_Done_Click"/>
    </Grid>
</Window>

<Window x:Class="PL.StartDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Icon="/Logo.png"
        Title="Project start date" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Insert project start date:" TextAlignment="Center" Margin="0,0,0,10" FontFamily="Comic Sans MS"/>
            <DatePicker FontFamily="Comic Sans MS" SelectedDate="{Binding SelectedDate}"/>
            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="OK" FontFamily="Comic Sans MS" Click="Btn_OK_Click" Margin="5" Padding="10,5"/>
                <Button Content="Cancel" FontFamily="Comic Sans MS" Click="Btn_Cancel_Click" Margin="5" Padding="10,5"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ConvertIdToContent x:Key="ConvertIdToContentKey" />
        <local:ConvertHaveTask x:Key="ConvertHaveTaskKey"/>
        <local:ConvertDontHaveTask x:Key="ConvertDontHaveTaskKey"/>
        <local:ConvertLevelSelected x:Key="ConvertLevelSelectedKey"/>
        <local:LevelEngineerCollection x:Key="LevelEngineerCollectionKey" />
        <local:StatusesCollection x:Key="StatusesCollectionKey"/>
        <local:RoleCollection x:Key="RolCollectionKey"/>
        <Style x:Key="myButtonStyle"
                TargetType="Button">
            <Setter Property="FontSize"
                        Value="22" />
            <Setter Property="FontFamily"
                        Value="Comic Sans MS" />
            <Setter Property="Height"
                    Value="40"/>
        </Style>
    </Application.Resources>
</Application>
<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="ENGINEER" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Height="70" Width="150" Click="btnEngineer_Click" FontSize="22" FontFamily="MV Boli" FontWeight="Bold" Background="#FF3498DB"/>
        <Button Content="INITDB" HorizontalAlignment="Left" Margin="650,300,0,0" VerticalAlignment="Top" Height="70" Width="100" FontFamily="MV Boli" FontSize="22" FontWeight="Bold" Click="btnInitDB_Click" Background="#FF7A59B6"/>
        <Button Content="RESET" HorizontalAlignment="Left" Margin="530,300,0,0" VerticalAlignment="Top" Height="70" Width="100" FontFamily="MV Boli" FontSize="22" FontWeight="Bold" Click="btnReset_Click" Background="#FF7A59B6"/>
        <Image HorizontalAlignment="Center" Height="285" VerticalAlignment="Top" Width="800" Source="/CodeMaster.png" />
    </Grid>
</Window>
